{
  "manifest_version": 3,
  "name": "Content Warning Extension",
  "version": "1.0",
  "description": "Blurs offensive words/phrases on pages and lets users flag risky URLs.",
"permissions": ["storage", "tabs", "webNavigation"],
"host_permissions": ["http://localhost/*", "http://127.0.0.1/*", "<all_urls>"],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["compromise.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "initiate.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["badWords.json", "welcome.html", "icon.png", "warning.html"],
      "matches": ["<all_urls>"]
    }
  ]
}